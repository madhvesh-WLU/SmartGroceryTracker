<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainbackground">

    <!-- Top Section with Semicircle and User Image -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Blue Semicircle Image at the Top -->
        <ImageView
            android:id="@+id/top_semi_circle"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/curved_shape"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="ContentDescription" />

        <!-- User Image Overlapping the Semicircle -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/user_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="150dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/white"
            android:padding="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/user_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:shapeAppearanceOverlay="@style/CircularImageView"
            app:strokeColor="@android:color/white"
            app:strokeWidth="4dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ScrollView to handle vertical overflow for user information -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingBottom="16dp">

            <!-- User Name Below the Image -->
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/User"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center" />

            <!-- MaterialCardView for User Details -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/materialCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="24dp"
                android:background="@drawable/card_background"
                app:cardElevation="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <!-- Username Input Field -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/username_input_layout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="@string/username"
                        app:endIconDrawable="@drawable/user"
                        android:backgroundTint="@color/vibrant_orange"
                        app:endIconTint="@color/vibrant_orange"
                        app:endIconMode="custom"
                        app:hintTextColor="@color/vibrant_orange"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:boxStrokeColor="@color/vibrant_orange"> <!-- Set border color here -->

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:hint="@string/madhu"
                            android:inputType="textEmailAddress"
                            android:textColor="#000000"
                            android:textColorHint="#7C7C7C" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Email Input Field -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/email_input_layout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="@string/your_email"
                        app:endIconDrawable="@drawable/mail_user"
                        android:backgroundTint="@color/vibrant_orange"
                        app:endIconTint="@color/vibrant_orange"
                        app:endIconMode="custom"
                        app:hintTextColor="@color/vibrant_orange"
                        app:layout_constraintTop_toBottomOf="@id/username_input_layout"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:boxStrokeColor="@color/vibrant_orange"> <!-- Set border color here -->

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:hint="@string/madhu_gmail_com"
                            android:inputType="textEmailAddress"
                            android:textColor="#000000"
                            android:textColorHint="#7C7C7C" />
                    </com.google.android.material.textfield.TextInputLayout>


            <!-- Edit Profile and Logout Buttons -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/edit_profile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="@string/edit_profile"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/vibrant_orange"
                        app:iconGravity="textStart"
                        app:layout_constraintTop_toBottomOf="@id/email_input_layout"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/logout"
                        app:layout_constraintHorizontal_weight="1" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/logout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:backgroundTint="@color/white"
                        android:text="@string/logout"
                        android:textColor="@color/colorPrimaryDark"
                        app:icon="@drawable/baseline_logout_24"
                        app:iconGravity="textStart"
                        app:layout_constraintTop_toBottomOf="@id/email_input_layout"
                        app:layout_constraintStart_toEndOf="@id/edit_profile"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_weight="1" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
