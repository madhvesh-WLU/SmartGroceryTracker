<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:layout_margin="8dp"
    android:background="?android:attr/selectableItemBackground">

    <!-- Root LinearLayout for the Card Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Item Name and Price in One Line -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <!-- Item Name (left aligned) -->
            <TextView
                android:id="@+id/item_name_global"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/Item_name1"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/vibrant_orange"
                android:layout_weight="1"
                android:layout_marginEnd="16dp" />

            <!-- Price of Item (right aligned) -->
            <TextView
                android:id="@+id/item_price_global"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/Price2"
                android:textSize="14sp"
                android:layout_weight="1"
                android:textColor="@color/red"
                android:textAlignment="viewEnd" />
        </LinearLayout>

        <!-- Category and Quantity in One Line -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <!-- Category (left aligned) -->
            <TextView
                android:id="@+id/item_category_global"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/Category4"
                android:textSize="14sp"
                android:layout_weight="1"
                android:layout_marginEnd="16dp" />

            <!-- Quantity (right aligned) -->
            <TextView
                android:id="@+id/item_quantity_global"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/Quantity2"
                android:textSize="14sp"
                android:layout_weight="1"
                android:textAlignment="viewEnd" />
        </LinearLayout>

        <!-- Divider Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="8dp"
            android:background="@android:color/darker_gray"/>

        <!-- Bill Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Bill Name and Bill Price in the same line -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:gravity="center_vertical">

                <!-- Bill Name (left aligned) -->
                <TextView
                    android:id="@+id/bill_name_global"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/Bill_name2"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/vibrant_orange"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"/>

                <!-- Bill Price (right aligned) -->
                <TextView
                    android:id="@+id/bill_price_global"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/Price3"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/red"
                    android:layout_weight="1"
                    android:gravity="end"/>
            </LinearLayout>

            <!-- Date of Purchase and Quantity in the same line -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:gravity="center_vertical">

                <!-- Date of Purchase (left aligned) -->
                <TextView
                    android:id="@+id/date_of_bill_global"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/Date_of_purchase"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"/>

                <!-- Total Quantity (right aligned) -->
                <TextView
                    android:id="@+id/total_quantity_global"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/Quantity3"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_weight="1"
                    android:gravity="end"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
