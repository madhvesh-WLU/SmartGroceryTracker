<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/mainbackground"
    >

    <LinearLayout
        android:id="@+id/section_top1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello, Madhvesh"
        android:textSize="24sp"
        android:textStyle="bold"
        app:fontFamily="sans-serif"
        app:lineHeight="32sp"
        android:layout_marginHorizontal="15dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    </LinearLayout>
    <!-- 40% of the screen height -->
    <LinearLayout
        android:id="@+id/section_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:background="#FFDDFFDD"
        android:gravity="center_vertical"

        android:orientation="vertical">

        <!-- You can add components related to the first activity here -->
        <!-- Example component -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="This is the Top Section (40%)"
            android:textSize="18sp" />

    </LinearLayout>

    <!-- 60% of the screen height -->
    <LinearLayout
        android:id="@+id/section_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5.5"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >

        <!-- You can add components related to the second activity here -->
        <!-- Example component -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is the Bottom Section (60%)"
            android:textSize="18sp"
            android:layout_gravity="center" />

    </LinearLayout>
</LinearLayout>





