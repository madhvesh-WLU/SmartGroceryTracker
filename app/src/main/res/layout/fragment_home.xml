<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3F0E2"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section with Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grocery Management"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"/>

        <!-- Monthly Spend Summary -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/monthly_spend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Monthly Spend"
                android:textSize="16sp"
                android:textColor="#666" />

            <TextView
                android:id="@+id/spend_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="$300"
                android:textSize="16sp"
                android:textColor="#666" />
        </LinearLayout>

        <!-- Spend Progress Bar -->
        <ProgressBar
            android:id="@+id/spend_progress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:progress="10"
            android:layout_marginTop="8dp"
            android:progressTint="#5FD068"/>

        <!-- Bar Chart Placeholder (ImageView or Custom Chart) -->
        <ImageView
            android:id="@+id/bar_chart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/img" />

        <!-- Quick Access Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btn_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Home"
                android:backgroundTint="#87CEEB" />

            <Button
                android:id="@+id/btn_camera"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Camera"
                android:backgroundTint="#87CEEB" />
        </LinearLayout>

        <!-- Additional Content -->
        <TextView
            android:id="@+id/grocery_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grocery List"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <!-- Grocery List Placeholder -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <!-- Example Grocery List Items -->
            <TextView
                android:id="@+id/grocery_item_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Item 1: Quantity - Price"
                android:padding="8dp"
                android:background="#E0F7FA"/>

            <TextView
                android:id="@+id/grocery_item_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Item 2: Quantity - Price"
                android:padding="8dp"
                android:background="#E0F7FA"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Settings Button -->
        <Button
            android:id="@+id/btn_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:layout_marginTop="16dp"
            android:backgroundTint="#F0E68C"/>

    </LinearLayout>
</ScrollView>
