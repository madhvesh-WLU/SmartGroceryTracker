<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shaped_background"
    tools:context=".MainActivity">

    <!-- Header Section -->

    <!-- Card Section with Pie Chart -->
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifimageview"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/giphy"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/welcomeview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Welcome, User"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_margin="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gifimageview" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_with_pie_chart"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/welcomeview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <!-- Pie Chart Visualization -->
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pie_chart"
                android:layout_width="400dp"
                android:layout_height="250dp"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/labels_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="right"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:paddingEnd="16dp"
            android:paddingTop="16dp">

            <!-- Spent Label with Color Indicator -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

                <View
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:background="@color/green"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/spent_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Spent"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>

            <!-- Remaining Label with Color Indicator -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:background="@color/vibrant_orange"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/remaining_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remaining"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Left to Spend Section -->

    <!-- GridLayout for Buttons with Icons -->
    <TextView
        android:id="@+id/left_to_spend_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/card_background"
        android:gravity="center"
        android:padding="16dp"
        android:text="Left to Spend\n$2,323.56 out of $4,500.00"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_with_pie_chart" />

    <GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="72dp"
        android:columnCount="2"
        android:rowCount="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/left_to_spend_label"
        app:layout_constraintStart_toStartOf="@+id/left_to_spend_label"
        app:layout_constraintTop_toBottomOf="@+id/left_to_spend_label"
        app:layout_constraintVertical_bias="0.0">

        <!-- Add Expense Item -->
        <LinearLayout
            android:id="@+id/grocerylist_main_button"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            android:background="@drawable/grid_item_background"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/add_expense_icon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:contentDescription="Add Expense Icon"
                android:src="@drawable/budget4" />

            <TextView
                android:id="@+id/grocerylist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Add Grocery List"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Monthly Spend Item -->
        <LinearLayout
            android:id="@+id/monthly_main_button"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            android:background="@drawable/grid_item_background"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/view_details_icon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:contentDescription="View Details Icon"
                android:src="@drawable/search2" />

            <TextView
                android:id="@+id/monthspend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Monthly Spend"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
