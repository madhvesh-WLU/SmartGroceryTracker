<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.grocerylist.GroceryListFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/bill_info_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/storeNameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Store Name"
                android:textSize="18sp"
                android:textColor="#000000"
                android:gravity="center"
                android:padding="4dp"
                android:background="@drawable/table_cell_border"/>

            <TextView
                android:id="@+id/dateOfPurchaseTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Date"
                android:textSize="18sp"
                android:textColor="#000000"
                android:gravity="center"
                android:padding="4dp"
                android:background="@drawable/table_cell_border"/>

            <TextView
                android:id="@+id/totalPriceTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Price"
                android:textSize="18sp"
                android:textColor="#000000"
                android:gravity="center"
                android:padding="4dp"
                android:background="@drawable/table_cell_border"/>
        </LinearLayout>

        <!-- Scrollable RecyclerView for the items -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="664dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:layout_marginBottom="55dp"
            android:scrollbars="vertical" />
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_gList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="80dp"
        android:tooltipText="Add New Receipt"
        app:srcCompat="@android:drawable/ic_input_add"
        app:maxImageSize="30dp" />
</FrameLayout>
