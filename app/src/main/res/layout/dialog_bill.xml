<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:background="@drawable/card_background"
    android:padding="24dp"
    android:orientation="vertical">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/dialog_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/Dialog_icon"
            android:src="@drawable/bill_dialog" />

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/add_new_bill"
            android:fontFamily="@font/inter"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/close_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="end"
            android:background="@android:color/transparent"
            android:src="@drawable/cross"
            android:padding="16dp"
            android:contentDescription="@string/Close_button" />
    </LinearLayout>

    <!-- Input Fields -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Bill Name -->
        <EditText
            android:id="@+id/bill_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/bill_name"
            android:inputType="text"
            android:minHeight="48dp"
            android:padding="16dp"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="12dp" />

        <!-- Date of Purchase -->
        <EditText
            android:id="@+id/date_of_purchase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/date_of_purchase"
            android:focusable="false"
            android:inputType="date"
            android:minHeight="48dp"
            android:padding="16dp"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="12dp" />

        <!-- Store Name -->
        <EditText
            android:id="@+id/store_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            android:hint="@string/store_name"
            android:inputType="text"
            android:minHeight="48dp"
            android:padding="16dp"
            android:layout_marginBottom="12dp" />

        <!-- Total Quantity -->
        <EditText
            android:id="@+id/total_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/total_quantity"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:padding="16dp"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="12dp" />

        <!-- Total Price -->
        <EditText
            android:id="@+id/total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/total_price"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:padding="16dp"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="20dp" />
    </LinearLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/save_bill_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="24dp"
        android:background="@drawable/rounded_button_background"
        android:text="@string/next"
        android:textColor="@android:color/white"
        app:backgroundTint="@color/vibrant_orange"
        app:layout_constraintTop_toBottomOf="@id/divider2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Loading Spinner -->
    <ProgressBar
        android:id="@+id/loading_spinner"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_marginTop="20dp" />

</LinearLayout>
