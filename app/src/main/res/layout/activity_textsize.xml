<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:background="@drawable/card_background"
    android:padding="25dp"
    tools:context=".ui.settings.TextsizeActivity">


    <TextView
        android:id="@+id/text_size_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textsize_title"
        android:textSize="20sp"
        android:textColor="@color/dark_grey"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <ImageButton
        android:id="@+id/close_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@android:color/transparent"
        android:contentDescription="Close Button"
        android:padding="8dp"
        android:src="@drawable/cross"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/text_size_radio_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_size_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/small_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/small"
            android:textColor="@color/vibrant_orange"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/medium_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/medium"
            android:textColor="@color/vibrant_orange"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/large_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/large"
            android:textColor="@color/vibrant_orange"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/extra_large_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/extra_large"
            android:textColor="@color/vibrant_orange"
            android:textSize="16sp" />
    </RadioGroup>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/apply_text_size_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply"
        android:layout_marginTop="24dp"
        android:backgroundTint="#FF3D00"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/text_size_radio_group"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
