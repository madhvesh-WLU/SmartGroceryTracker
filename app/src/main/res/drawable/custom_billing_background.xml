<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/custom_billing_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient Background -->
    <gradient
        android:startColor="#64B5F6"
    android:endColor="#0277BD"
    android:angle="90" />

    <corners android:radius="16dp" />

    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />

    <stroke
        android:width="2dp"
        android:color="#01579B" /> <!-- Darker Blue for stroke -->
</shape>
