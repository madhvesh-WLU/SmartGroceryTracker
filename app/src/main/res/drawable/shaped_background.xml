<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Main Background Gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#D16BA5"
                android:centerColor="#86A8E7"
                android:endColor="#86A8E7"
                android:type="linear" />
        </shape>
    </item>

    <!-- Semi-Circle at the Top -->
    <item>
        <shape android:shape="oval">
            <size android:width="600dp" android:height="400dp" />
            <solid android:color="#F7F6F2" />
        </shape>
        <gravity android:gravity="top|center_horizontal" />
    </item>

    <!-- Layered Waves at the Bottom -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:startColor="#FFFFFF"
                android:centerColor="#D1E9F2"
                android:endColor="#86A8E7"
                android:type="linear" />
        </shape>
        <padding android:bottom="100dp" />
        <gravity android:gravity="bottom" />
    </item>

    <!-- Wave Overlay -->
    <item>
        <shape android:shape="rectangle">
            <size android:height="80dp" />
            <solid android:color="#D1E9F2" />
            <corners android:radius="100dp" />
        </shape>
        <gravity android:gravity="bottom" />
    </item>

</layer-list>
